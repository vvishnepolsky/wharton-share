<div class ='container' >
  <div class="page-header">
    <h1>Create New Account</h1>

    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">
          User Details
        </h3>
      </div>
      <div class="panel-body">

        <%= form_for(resource, as: resource_name, url: user_registration_path) do |f| %>
          <%= devise_error_messages! %>

          <p>Firstname</p>
            <%= f.text_field(:firstname, :class => 'form-control') %> <br />

          <p>Lastname</p>
            <%= f.text_field(:lastname, :class => 'form-control') %> <br />

          <p>Class Year</p>
            <%= f.select(:classyear, {'WG\'19' => 'WG19', 'WG\'18' => 'WG18', 'WG\'17' => 'WG17' }) %><br /><br />

          <p>Email (requires @wharton.upenn.edu)</p>
            <%= f.email_field(:email, :class => 'form-control') %> <br />

          <p>Password</p>
            <%= f.password_field(:password, :class => 'form-control') %> <br />

          <p>Confirm Password</p>
            <%= f.password_field(:password_confirmation, :class => 'form-control') %> <br />

          <div class="form-buttons">
            <%= f.submit("Create Account", :class => 'btn btn-primary') %>
          </div>
        <% end %>

      </div>
    </div>
  </div>
</div>
